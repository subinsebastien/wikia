<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.xtel.wikia.Detail">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#dddddd"
        android:padding="16dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_thumb_image"
        android:layout_alignBottom="@+id/iv_cover"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-50dp"
        android:background="#444444"
        android:padding="1dp"
        android:cropToPadding="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wikia Title in Caps"
        android:id="@+id/tv_wikia_title"
        android:layout_alignBottom="@+id/iv_thumb_image"
        android:layout_toLeftOf="@+id/iv_thumb_image"
        android:layout_toStartOf="@+id/iv_thumb_image"
        android:layout_margin="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wikia description"
        android:id="@+id/tv_wikia_desc"
        android:layout_below="@+id/tv_wikia_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

</RelativeLayout>
